doctype
html
	head
		mate(charset="utf-8")
		meta(name="viewport",content="height = device-height,width = device-width ,initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
		title #{title}
		include ../public/static
		script(src="js/login.js")
	body
		.content
			.buttons-tab
				a.tab-link.active.button(href="#tab1") 登录
				a.tab-link.button(href="#tab2") 注册
			.tabs.login_tabs
				#tab1.tab.active
					.list-block
						ul
							li
								.item-content
									.item-media
										i.icon.icon-form-name
									.item-inner
										.item-title.label 用户名:
										.item-input
											input(type="text" placeholder="请输入用户名/手机号码")
							li
								.item-content
									.item-media
										i.icon.icon-form-name
									.item-inner
										.item-title.label 密&nbsp;&nbsp;&nbsp;码:
										.item-input
											input(type="password" placeholder="请输入密码")
					//.row
						//.col-10
						//.col-20
							//p 记住密码
						//.col-70
							//label.label-switch
								//input(type="checkbox",name="cookie")
								//.checkbox
					.row.login_errormsg
						.col-10
						.col-90
							p
					.row
						.col-5
						.col-90
							a#but1(href="#" class="button button-big button-fill button-success") 登录
						.col-5
					.row.login_forget
						a.open-popup(href="#") 忘记密码?
				#tab2.tab
					.list-block
						ul
							li
								.item-content
									.item-media
										i.icon.icon-form-name
									.item-inner
										.item-title.label 用户名:
										.item-input
											input(type="text" name="username" placeholder="请输入用户名")
							li
								.item-content
									.item-media
										i.icon.icon-form-name
									.item-inner
										.item-title.label 密&nbsp;&nbsp;&nbsp;码:
										.item-input
											input(type="password" name="password" placeholder="请输入密码")
							li
								.item-content
									.item-media
										i.icon.icon-form-name
									.item-inner
										.item-title.label 重复密码:
										.item-input
											input(type="password" name="reppassword" placeholder="请重复输入密码")
							li
								.item-content
									.item-media
										i.icon.icon-form-name
									.item-inner
										.item-title.label 手&nbsp;&nbsp;&nbsp;机:
										.item-input
											input(type="text" name="phonenum" placeholder="请输入手机号码")
							li
								.item-content
									.item-media
										i.icon.icon-form-name
									.item-inner
										input.item-title.btn.btn_checkout(value='获取验证码',type="button",id="but3")
										.item-input
											input(type="text" name="checkcode" placeholder="请输入收到的验证码")
					.row.login_errormsg
						.col-10
						.col-90
							p
					.row
						.col-5
						.col-90
							a#but2(href="#" class="button button-big button-fill button-success") 注册
						.col-5
			.popup#tab3(style="background: #eeeeee;")
				a.close-popup 返回登录
				.form_box#pop1
					.list-block
							ul
								li
									.item-content
										.item-media
											i.icon.icon-form-name
										.item-inner
											.item-title.label 用户名:
											.item-input
												input(type="text" name="username" placeholder="请输入用户名")
								li
									.item-content
										.item-media
											i.icon.icon-form-name
										.item-inner
											.item-title.label 手&nbsp;&nbsp;&nbsp;机:
											.item-input
												input(type="text" name="phonenum" placeholder="请输入手机号码")
								li
									.item-content
										.item-media
											i.icon.icon-form-name
										.item-inner
											input.item-title.btn.btn_checkout#but4(value='获取验证码',type="button")
											.item-input
												input(type="text" name="checkcode" placeholder="请输入收到的验证码")
					.row.login_errormsg
							.col-10
							.col-90
								p
					.row
						.col-5
						.col-90
							a#but5(href="#" class="button button-big button-fill button-success") 校验
						.col-5
				.form_box#pop2(style="display:none")
					.list-block
							ul
								li
								.item-content
									.item-media
										i.icon.icon-form-name
									.item-inner
										.item-title.label 密&nbsp;&nbsp;&nbsp;码:
										.item-input
											input(type="password" name="password" placeholder="请输入密码")
								li
									.item-content
										.item-media
											i.icon.icon-form-name
										.item-inner
											.item-title.label 重复密码:
											.item-input
												input(type="password" name="reppassword" placeholder="请重复输入密码")
					.row.login_errormsg
							.col-10
							.col-90
								p
					.row
						.col-5
						.col-90
							a#but6(href="#" class="button button-big button-fill button-success") 重置
						.col-5
